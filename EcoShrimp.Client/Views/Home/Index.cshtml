@{
    ViewData["Title"] = "Trang chủ";
}


<!-- Start Main Slider -->
<section class="main-slider style1">
    <div class="slider-box">
        <!-- Banner Carousel -->
        <div class="banner-carousel owl-theme owl-carousel">
            <!-- Slide -->
            <div class="slide"  style="padding: 175px 0">
                <div class="image-layer" style="background-image:url(assets-template/images/slides/slide-v1-1.jpg)"></div>
                <div class="slider-bg-box" style="background-image: url(assets-template/images/slides/slide-v1-1-bg1.jpg);"></div>
                <div class="slider-image"><img class="float-bob-y" src="assets-template/images/slides/slide-v1-1-image11.png" alt=""></div>
                <div class="round-box" style="margin: -100px  300px 0 0px;  ">
                    <h3>Kiểm soát môi trường  <br></h3>
                    <h2>Thành công bền vững</h2>
                </div>
                <div class="auto-container">
                    <div class="content">
                        <div class="big-title">
                            <h2>IoT<br>  Chìa khóa <br> cho ao tôm  xanh!</h2>
                        </div>
                        <div class="text">
                            <p>Công nghệ IoT giúp giám sát môi trường ao tôm<br> Hiệu quả - tức thì - phản hồi nhanh chóng.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Slide -->
            <div class="slide" style="padding: 215px 0">
                <div class="image-layer" style="background-image:url(assets-template/images/slides/slide-v1-1.jpg)"></div>
                <div class="slider-bg-box" style="background-image: url(assets-template/images/slides/slide-v1-1-bg2.jpg);"></div>
                <div class="slider-image"><img class="float-bob-y" src="assets-template/images/slides/slide-v1-1-image22.png" alt=""></div>
                <div class="round-box" style="margin: 170px  300px 0 0px;  ">
                    <h3>Môi trường số hóa <br></h3>
                    <h2>Kiểm soát trong tầm tay!</h2>
                </div>
                <div class="auto-container">
                    <div class="content">
                        <div class="big-title">
                            <h2>Theo dõi 24/7 <br>Bảo vệ ao tôm toàn diện!<br> </h2>
                        </div>
                        <div class="text">
                            <p> Giám sát real-time  <br> phát hiện sớm bất thường, giúp ao tôm luôn ổn định.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Slide -->
            <div class="slide" style="padding: 215px 0">
                <div class="image-layer" style="background-image:url(assets-template/images/slides/slide-v1-1.jpg)"></div>
                <div class="slider-bg-box" style="background-image: url(assets-template/images/slides/slide-v1-1-bg1.jpg);"></div>
                <div class="slider-image"><img class="float-bob-y" src="assets-template/images/slides/slide-v1-1-image33.png" alt=""></div>
                <div class="round-box " style="margin: 170px  300px 0 0px;  ">
                    <h3>Công nghệ tiên phong<br>  </h3>
                    <h2>kết nối vững chắc.</h2>
                </div>
                <div class="auto-container">
                    <div class="content">
                        <div class="big-title">
                            <h2>Kết nối thông minh <br> An toàn theo dỗi <br></h2>
                        </div>
                        <div class="text">
                            <p>Giám sát ao tôm mọi lúc<br> cảnh báo kịp thời, tối ưu quy trình nuôi chỉ với một chạm</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Main Slider -->
@await Component.InvokeAsync("Product")


<!--Start Shop Style1 Area-->
<section class="shop-style1-area">
    <div class="shop-top-image-box">
        <div class="inner">
            <img src="assets-template/images/resources/shop-top-image.png" alt="">
        </div>
        <div class="ice paroller">
            <img class="zoom-fade" style="position: relative; left: -110px; top: -120px; width: 600px" src="assets-template/images/resources/ice1.png" alt="">
