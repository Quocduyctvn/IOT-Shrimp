@using EcoShrimp.Admin.Areas.Admin.ViewModels.Products
@using EcoShrimp.Share.Const
@using EcoShrimp.Share.Enums
@using EcoShrimp.Share.Extension
@model X.PagedList.PagedList<EcoShrimp.Data.Entities.AppProducts>

@{
	int stt = 1;
	ViewData["Title"] = "Danh sách sản phẫm";
}
<div class="row w-100 fs-4 ">
	<span class="ps-2" style="font-size: 25px">Danh sách Sản phẫm</span>
</div>
<hr />

@if (User.IsInPermission(AuthConst.AppProducts.CREATE))
{
	<form asp-action="Index">
		<div class="row">
			<div class="col-12">
				<div class="row">
					<button type="button" class="btn btn-primary w-auto rounded-1 col-2 ms-1 text-light">
						<a asp-action="Create" asp-controller="AdminProduct" style="color: white">
							<i class="fas fa-plus-circle"></i> Thêm mới
						</a>
					</button>
					<div class="mx-1"></div>
					<div class="col-3 p-0 ms-4">
						<input type="text" name="keyword" placeholder="Bạn cần tìm gì ..." class="form-control" style="border-radius: 7px 0 0 7px" />
					</div>
					<button type="submit" class="col-auto p-0 border border-none px-2" style="border-radius: 0 7px 7px 0">Tìm Kiếm</button>
				</div>
			</div>
		</div>
	</form>
}

@if (User.IsInPermission(AuthConst.AppProducts.VIEW_LIST))
{
	<div class="table-responsive mt-3">
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th style="width: 50px ">#</th>
					<th style="width: 80px ">Ảnh </th>
					<th>Tên sản phẫm</th>
					<th style="width: 110px " class="text-center">Trạng thái</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td style="vertical-align: middle;">@stt</td>
						<td><img src="@item.appImges.FirstOrDefault()?.Path" class="rounded-3" width="50px" height="50px" /></td>
						<td style="align-items: center; gap: 5px; vertical-align: middle;">
							<span style="background-color: #c99d1e; padding:3px 5px; font-size: 11px; border-radius: 4px" class="rounded-2 text-light me-2">
								@item.appCategory.Name
							</span>
							<span style="padding-left: 10px">@item.Name </span>
							<div style="font-size: 14px">
								<i>
									Số lượng phiên bản: <span class="fw-bold">[@item.TotalQuantity]</span>
									-  Số lượng tồn: <span class="fw-bold">[@item.StockQuantity]</span>
								</i>
								<a asp-action="Detail" asp-controller="AdminProduct" asp-route-id="@item.Id">
									<i class="fas fa-info-circle" style="font-size: 18px"></i>
								</a>
							</div>
						</td>
						<td style="vertical-align: middle;" class="text-center">
							@if (item.Status == Status.Active)
							{
								<span class="mx-1">Hoạt động</span>
							}
							@if (item.Status == Status.Inactive)
							{
								<span class="mx-1">Không hoạt động</span>
							}
						</td>

						<td class="justify-content-center text-center " style="width: 180px; vertical-align: middle;">
							<a asp-action="Subtr" asp-controller="AdminProduct" asp-route-id="@item.Id" class="pt-2">
								<i class="fas fa-arrow-alt-circle-up"></i>
							</a>
							<a asp-action="Plus" asp-controller="AdminProduct" asp-route-id="@item.Id" class="pt-2">
								<i class="fas fa-arrow-alt-circle-down"></i>
							</a>

							<button type="button" class="text-success px-2 btn btn-outline-light border border-sacondary"
									data-toggle="modal" data-target="#AddQuantity"
									onclick="fncAddQuantity('@item.Name', @item.Id)">
								<i class="fas fa-plus-circle"></i>
							</button>

							@if (User.IsInPermission(AuthConst.AppProducts.UPDATE))
							{
								<button type="button" class="text-primary px-2 btn btn-outline-light border border-sacondary">
									<a asp-action="Update" asp-controller="AdminProduct" asp-route-id="@item.Id">
										<i class="far fa-edit fs-5"></i>
									</a>
								</button>
							}

							@if (User.IsInPermission(AuthConst.AppProducts.DELETE))
							{
								<button type="button" class=" px-2 btn btn-outline-light border border-sacondary ">
									<a asp-action="Delete" asp-controller="AdminProduct" asp-route-id="@item.Id">
										<i class="fas fa-trash-alt fs-5 text-danger"></i>
									</a>
								</button>
							}
						</td>
					</tr>
					stt++;
				}
			</tbody>
		</table>
		@if (TempData["searched"] != null && !string.IsNullOrEmpty(TempData["searched"]!.ToString()))
		{
			<div class="text-center">
				<span class="text-danger"><i>Kết quả tìm kiếm [@Model.Count()] item </i></span> <a asp-action="Index" class="text-decoration-none text-center" style="display: inline-block">Đặt lại</a>
			</div>
		}
	</div>
}
else
{
	<div class="text-center">
		<span class="text-danger"><i>Bạn không có quyền xem danh sách</i></span>
	</div>
}


<partial name="_Pager" />

@await Html.PartialAsync("_AddQuantity", new QuantityVM())
