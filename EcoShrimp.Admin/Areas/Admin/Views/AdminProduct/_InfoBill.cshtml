<div class="modal fade" id="modelInforBill" tabindex="-1" role="dialog" aria-labelledby="modelInforBillLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content" style="width: 700px">
			<form asp-action="UpdateQuantity" asp-controller="AdminProduct" id="modelInforBillForm" method="post">
				<div class="modal-header">
					<h4 class="modal-title fs-6" id="modelInforBillLabel">Thông tin bán hàng</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body" style="padding-top: 0px">
					<div class="row">
						<div class="col-12 d-flex justify-content-end" style="margin-top: 7px">
							Ngày bán: <span style="font-size: 14px; margin-top: 4px" id="buyDate"></span>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="h5">Thông tin khách hàng:</div>
							<div id="ProductName" style="padding-left: 10px">
								<p class="mb-0">- Tên trang trại: <span id="farmName"> </span></p>
								<p class="mb-0">- Tên khách hàng: <span id="ownerName"> </span></p>
							</div>
						</div>
					</div>
					<div class="row mt-3">
						<div class="col">
							<div class="h5">Thông tin sản phẫm:</div>
							<div id="ProductName" style="padding-left: 10px">
								<p class="mb-0">- Tên sản phẫm: <span id="productName"> </span></p>
								<p class="mb-0">- Mã phiên bản: <span id="seriNumber"> </span></p>
							</div>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
					<button type="submit" class="btn btn-primary">Thêm</button>
				</div>
			</form>
		</div>
	</div>
</div>
<script type="text/javascript">
	// Hàm kiểm tra validate
	function fncInforBill(farmName, ownerName, productName, seriNumber, buyDate) {
		// Hiển thị modal
		$('#modelInforBill').modal('show');

		// Cập nhật dữ liệu vào modal
		$('#modelInforBill span#farmName').text(farmName);
		$('#modelInforBill span#ownerName').text(ownerName);
		$('#modelInforBill span#productName').text(productName);
		$('#modelInforBill span#seriNumber').text(seriNumber);
		$('#modelInforBill span#buyDate').text(buyDate);
	}


</script>

