@model EcoShrimp.Admin.Areas.Admin.ViewModels.Users.UserVM
@{
	ViewData["Title"] = "Thêm mới người dùng";
}
<div class="container-fluid p-0">
	<div class="row  ">
		<div class="col-auto">
			<a asp-action="Index" asp-controller="AdminUsers" class="text-decoration-none">Quản lý danh sách tài khoản /</a>
		</div>
		<div class="col-auto p-0 ms-1">
			<i> Thêm tài khoản</i>
		</div>
	</div>
	<div class="row  fs-4 " style="font-weight: 500">
		<span class="col h4">Thêm tài khoản</span>
	</div>
	<hr />
	<div class="row  ">
		<div class="col ">
			<form asp-action="AddUser" method="post">
				<div class="row " style="margin-left: 4px">
					<div class="col-5 p-0 ">
						<div class="row ms-0 me-4  mt-2">
							<div class="p-0 fw-bold fs-6 mb-2">Họ tên <span class="text-danger">*</span></div>
							<input type="text" asp-for="Name" class="form-control" placeholder="Nguyễn Văn A"/>
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="row ms-0 me-4 mt-2">
							<div class="col" style="padding-left: 0">
								<div class="p-0 fw-bold fs-6 mb-2">Mật khẩu <span class="text-danger">*</span></div>
								<input type="password" asp-for="Password" class="form-control" placeholder="********" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="col" style="padding-right: 0">
								<div class="p-0 fw-bold fs-6 mb-2">Xác nhận mật khẩu <span class="text-danger">*</span></div>
								<input type="password" asp-for="Cfm_Password" class="form-control" placeholder="********" />
								<span asp-validation-for="Cfm_Password" class="text-danger"></span>
							</div>
						</div>
						<div class="row ms-0 me-4  mt-2">
							<div class="p-0 fw-bold fs-6 mb-2">Vai trò trên trang</div>
							<select asp-for="IdRole" id="statusSelect" class="form-select form-control form-select-sm py-2" aria-label="Small select example">
								@foreach (var item in ViewBag.ListRole)
								{
									<option value="@item.Id">@item.Name</option>
								}
							</select>
						</div>
					</div>

					<div class="col-7 p-0 ms-auto" style="padding-left:45px">
						<div class="row ms-0 mx-3   mt-2">
							<div class="col p-0">
								<div class="row px-2 pe-4">
									<div class="col-6 p-0 ps-1">
										<div class="p-0 fw-bold fs-6 mb-2">Số điện thoại  <span class="text-danger">*</span></div>
										<input type="text" asp-for="Phone" class="form-control" placeholder="0901 *** ***" />
										<span asp-validation-for="Phone" class="text-danger"></span>
									</div>
									<div class="col" style="margin-left: 20px">
										<div class="p-0 fw-bold fs-6 mb-2">Email</div>
										<input type="text" asp-for="Email" class="form-control" placeholder="Vd: Shrimp@gmail.com" />
										<span asp-validation-for="Email" class="text-danger"></span>
									</div>
								</div>
							</div>
						</div>
						<div class="row ms-0 mx-3  mt-2">
							<div class="p-0 fw-bold fs-6 mb-2">Địa chỉ</div>
							<input type="text" asp-for="Address" class="form-control" placeholder="Địa chỉ nhà...." />
							<span asp-validation-for="Address" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row  mt-5">
					<button class="btn btn-success px-4" type="submit"><i class="far fa-save"></i> Lưu</button>
					<button class="btn  px-4 " style="background-color: #c3c3c3; margin-left: 15px" type="reset"><i class="fas fa-undo"></i> Nhập lại</button>
				</div>
			</form>
			<div class="row mt-3 w-100">
				<a asp-action="Index" asp-controller="AdminUsers" class="text-decoration-none p-0 w-auto">Quay về trang danh sách</a>
			</div>
		</div>
	</div>
</div>
